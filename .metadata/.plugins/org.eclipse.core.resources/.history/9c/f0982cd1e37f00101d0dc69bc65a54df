package pagePackage;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import basePackage.BaseTest;
import io.appium.java_client.AppiumBy;
import io.appium.java_client.android.AndroidDriver;

public class ProfilePage extends BaseTest{

	public ProfilePage(AndroidDriver driver) {
		this.driver= driver;
	}
	
	String Profile_xpath = "//android.view.View[@content-desc=\"Hi, Kgil\"]";
	
	public void ProfileScreen() {
		
        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(20)); 
		
		WebElement profile= wait.until(ExpectedConditions.elementToBeClickable(
	            AppiumBy.ByAndroidUIAutomator("new UiSelector().className(\"android.widget.ImageView\").instance(0)")));
		profile.click();
		
	}
	
}
